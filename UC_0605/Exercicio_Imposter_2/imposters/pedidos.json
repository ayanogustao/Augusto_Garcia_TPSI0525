          }
        }
      ]
    },

    {
      "predicates": [
        { "equals": { "method": "PUT", "path": "/api/pedidos/999/estado" } }
      ],
      "responses": [
        {
          "is": {
            "statusCode": 404,
            "headers": { "Content-Type": "application/json" },
