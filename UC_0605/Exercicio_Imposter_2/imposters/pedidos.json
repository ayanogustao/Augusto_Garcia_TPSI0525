          }
        }
      ]
    },

    {
      "predicates": [
        { "equals": { "method": "DELETE", "path": "/api/pedidos/3" } }
      ],
      "responses": [
        {
          "is": {
            "statusCode": 200,
            "headers": { "Content-Type": "application/json" },
